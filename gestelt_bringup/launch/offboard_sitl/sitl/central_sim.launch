<launch>
  <!-- num_drones must be at least 2 even if we are planning for a single drone -->
  <arg name="num_drones" value="5"/>
  <!-- Gazebo parameters -->
  <arg name="world_name"/>
  <!-- Vehicle name used by PX4 configuration -->
  <arg name="vehicle" default="iris"/>
  <!-- Actual model SDF to be spawned -->
  <arg name="model" default="raynor"/> 
  
  <!-- Gazebo simulation -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="verbose" value="true"/>
  </include>

  <!-- Add static transform from world to map -->
  <node pkg="tf" type="static_transform_publisher" 
    name="world_to_map_tf" 
    args="0 0 0 0 0 0 1 world map 100" />

  <!-- Drone 0 -->
  <include file="$(find gestelt_bringup)/launch/offboard/sitl/offboard_px4_sitl.launch">
    <arg name="drone_id"        value="0"/>
    <arg name="vehicle"         value="$(arg vehicle)"/>
    <arg name="model"           value="$(arg model)"/>
    <arg name="init_x"          value="1.0"/>
    <arg name="init_y"          value="-1.0"/>
    <arg name="init_z"          value="0.0"/>
  </include>

  <!-- Drone 1 -->
  <include file="$(find gestelt_bringup)/launch/offboard/sitl/offboard_px4_sitl.launch">
    <arg name="drone_id"        value="1"/>
    <arg name="vehicle"         value="$(arg vehicle)"/>
    <arg name="model"           value="$(arg model)"/>
    <arg name="init_x"     value="1.0"/>
    <arg name="init_y"     value="1.0"/>
    <arg name="init_z"     value="0.0"/>
  </include>

  <!-- Drone 2 -->
  <include file="$(find gestelt_bringup)/launch/offboard/sitl/offboard_px4_sitl.launch">
    <arg name="drone_id"        value="2"/>
    <arg name="vehicle"         value="$(arg vehicle)"/>
    <arg name="model"           value="$(arg model)"/>
    <arg name="init_x"     value="-1.0"/>
    <arg name="init_y"     value="-1.0"/>
    <arg name="init_z"     value="0.0"/>
  </include>

  <!-- Drone 3 -->
  <include file="$(find gestelt_bringup)/launch/offboard/sitl/offboard_px4_sitl.launch">
    <arg name="drone_id"        value="3"/>
    <arg name="vehicle"         value="$(arg vehicle)"/>
    <arg name="model"           value="$(arg model)"/>
    <arg name="init_x"     value="-1.0"/>
    <arg name="init_y"     value="1.0"/>
    <arg name="init_z"     value="0.0"/>
  </include>

</launch>
